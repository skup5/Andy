<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowStyle</item>
        <item name="android:buttonStyle">@style/AppTheme.Widget.Button</item>

        <item name="android:fontFamily">@font/biryani</item>
        <item name="fontFamily">@font/biryani</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/primaryText</item>
        <item name="buttonNormalColor">@color/buttonNormal</item>
        <item name="buttonHighlightColor">@color/buttonHighlight</item>
        <item name="buttonTextColor">@color/buttonTextColor</item>
        <item name="backgroundDarkColor">@color/backgroundDark</item>
        <item name="navigationBackgroundColor">@color/navigationBackground</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.ToolbarTitleAppearance</item>
        <item name="subtitleTextStyle">@style/AppTheme.ActionBar.ToolbarSubtitleAppearance</item>
    </style>

    <style name="AppTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/buttonTextColor</item>
    </style>

    <style name="AppTheme.ActionBar.ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.ActionBar.ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Widget.Button" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="colorButtonNormal">?attr/buttonNormalColor</item>
        <item name="colorControlHighlight">?attr/buttonHighlightColor</item>
    </style>

</resources>
